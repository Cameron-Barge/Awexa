<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.awexa.awexa.ChildProgressActivity"
    tools:showIn="@layout/activity_child_progress">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="491dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <TextView
            android:id="@+id/rewardsPoints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Points: 85"
            android:textAlignment="center"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/choresTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chores"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="308dp"/>

        <ListView
            android:id="@+id/chores_list"
            android:layout_width="match_parent"
            android:layout_height="145dp"/>

        <Button
            android:id="@+id/addNewChore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="openNewChoreActivity"
            android:text="Add New Chore"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="336dp"/>

        <TextView
            android:id="@+id/rewardsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rewards"
            android:textSize="24sp"/>

        <ListView
            android:id="@+id/rewards_list"
            android:layout_width="match_parent"
            android:layout_height="145dp"/>

        <Button
            android:id="@+id/addNewReward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="openNewRewardActivity"
            android:text="Add New Reward"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="254dp"/>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
